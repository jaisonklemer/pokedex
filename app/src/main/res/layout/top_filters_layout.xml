<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/imgGenerationFilter"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="@dimen/default_margin"
        android:src="@drawable/ic_generation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgOrderFilter"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgOrderFilter"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="@dimen/default_margin"
        android:src="@drawable/ic_order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgFilterResult"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgFilterResult"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>